[
  {
    "path": "/api/auth/register",
    "methods": [
      "POST"
    ],
    "auth": "Bearer",
    "description": "Daftar user baru via Apps Script.",
    "notes": "Body JSON berisi `email`, `name`, `password`, `confirmPassword`, `roleType` (opsional, default `karyawan`), dan `branchId` (opsional). Wajib header Authorization: Bearer <NEXT_PUBLIC_API_SECRET>.",
    "example": {
      "title": "Register",
      "curl": "curl -X POST \"{{BASE_URL}}/api/auth/register\" \\\n  -H \"Content-Type: application/json\" \\\n  -H \"Authorization: Bearer <NEXT_PUBLIC_API_SECRET>\" \\\n  -d '{\n    \"email\": \"user@mail.com\",\n    \"name\": \"User\",\n    \"password\": \"secret123\",\n    \"confirmPassword\": \"secret123\",\n    \"roleType\": \"karyawan\",\n    \"branchId\": \"1\"\n  }'"
    }
  },
  {
    "path": "/api/auth/login",
    "methods": [
      "POST"
    ],
    "auth": "None",
    "description": "Login dan set cookie `session`. Bisa pakai `email` atau `name`.",
    "notes": "Jika berhasil, server akan meng-set cookie `session` yang dipakai oleh endpoint lain.",
    "example": {
      "title": "Login (set cookie session)",
      "curl": "curl -i -X POST \"{{BASE_URL}}/api/auth/login\" \\\n  -H \"Content-Type: application/json\" \\\n  -d '{\"email\":\"user@mail.com\",\"password\":\"secret\"}'"
    }
  },
  {
    "path": "/api/auth/session",
    "methods": [
      "GET",
      "DELETE"
    ],
    "auth": "Cookie",
    "description": "Cek session aktif atau logout.",
    "notes": "`GET` membaca cookie `session`, `DELETE` menghapus cookie `session` dan `user.role`.",
    "example": {
      "title": "Get session",
      "curl": "curl -X GET \"{{BASE_URL}}/api/auth/session\" \\\n  -H \"Cookie: session=<paste-cookie-value-here>\""
    }
  },
  {
